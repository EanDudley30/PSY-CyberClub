[[check]]
    message = "/etc/shadow is Not World Readable"
    points = 4 
    [[check.pass]]
    type = 'PathExists'
    path = '/etc/shadow'
    [[check.pass]]
    type = 'PermissionIs'
    path = '/etc/shadow'
    value = 'rw-r-----'

